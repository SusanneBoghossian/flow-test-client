include ../../mixins/flash-messages

doctype html
html

	//- HTML HEADER
	head
		meta(charset="utf-8")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		meta(http-equiv="X-UA-Compatible" content="IE=edge")

		title= title || 'flow-test-client'
		link(rel="shortcut icon", href="/favicon.ico", type="image/x-icon")

		//- Customise the stylesheet for your site by editing /public/styles/site.less
		//- All .less files will be automatically compiled and minified in production.
		link(href="/styles/site.min.css", rel="stylesheet")

		//- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries
		//- Safely remove this block if you are not targeting IE8
		//-[if lt IE 9]
			script(src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js")
			script(src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js")
		//-[endif]

		//- Include template-specific stylesheets by extending the css block
		block css

		//- Add any other template-specific HEAD tags by extending the head block
		block head

	//- HTML BODY
	body

		//- BODY
		#body
			.container-xs
				.page-intro
					h1 Sign into Natel Pay Test Client
				if showFlashMessages
					+flash-messages(messages)
				form(method='post', role='signin', novalidate).auth-form
					input(type='hidden', name='action', value='signin')
					.form-groups
						.form-group
							label(for='signin-email').sr-only Username
							input(type='text', name='username', placeholder='Username', id='signin-email').form-control.form-control--first
						.form-group
							label(for='signin-password').sr-only Password
							input(type='password', name='password', placeholder='Password', id='signin-password', value='').form-control.form-control--last
						br
						button(type='submit').btn.btn-block.btn-primary.btn-submit Sign in
