extends sms-flow-layout

block sms-flow-content
    p The PIN <strong>not</strong> sent to Mobile Number #{mobileNumber} is: #{pin}
    br
    form(method='post').form-inline
        p Enter the PIN <strong>not</strong> not sent to your mobile phone:
        form-group
            label(for="pin").sr-only PIN
            input(type="text" name="pin" value="#{enteredPin}")#pin.form-control
            
        br
        br
        p To confirm that you agree to the terms and conditions, enter your postcode:
        form-group
            label(for="postCode").sr-only Postcode
            input(type="text" name="postCode" value="#{enteredPostCode}")#postCode.form-control
        br
        br
        input(type="hidden" name="hiddenMobileNumber" value="#{mobileNumber}")
        input(type="hidden" name="hiddenPin" value="#{pin}")
        button(type='submit').btn.btn-primary.btn-submit Submit
